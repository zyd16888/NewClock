<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:text="时间"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_marginStart="40dp"
            android:textSize="30sp"
            android:id="@+id/clock_it_time"
            android:layout_alignBaseline="@+id/clock_switch"
            android:layout_alignBottom="@+id/clock_switch"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/clock_it_repeat_time"
            android:text="重复"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/clock_it_time"
            android:layout_alignStart="@+id/clock_it_time"
            android:layout_marginTop="10dp"
            android:textSize="15sp" />

        <Switch
            android:id="@+id/clock_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp" />

    </RelativeLayout>

